<main class="container mx-auto mt-10 flex-grow px-8 sm:px-24 lg:px-64 hidden">
  <section class="mx-auto mt-10 max-w-4xl text-left">
    <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg">
      <div class="p-6">
        <h3 class="mb-4 text-2xl font-bold text-white">Selecciona la acci칩n</h3>
        <div class="flex space-x-4">
          <button id="showCreateLinkForm" class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Crear Enlace</button>
          <button id="showEditLinkForm" class="inline-block px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">Editar Enlace</button>
          <button id="showDeleteLinkForm" class="inline-block px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Eliminar Enlace</button>
        </div>
      </div>
    </div>
  </section>

  <section id="formSection" class="mx-auto mt-10 max-w-4xl text-left">
    <!-- Crear Enlace -->
    <div id="createLinkFormContainer" class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hidden">
      <div class="p-6">
        <h3 class="mb-4 text-2xl font-bold text-white">Formulario de Crear Enlace</h3>
        <form id="createLinkForm" class="space-y-6">
          <div>
            <label for="url" class="block text-sm font-bold text-gray-100">URL</label>
            <input type="text" id="urlCreateLink" name="url" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <label for="userCreateLink" class="block text-sm font-bold text-gray-100">Usuario</label>
            <input type="text" id="userCreateLink" name="user" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <label for="passwordCreateLink" class="block text-sm font-bold text-gray-100">Contrase침a</label>
            <input type="password" id="passwordCreateLink" name="password" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <button type="button" id="submitCreateLinkForm" class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Crear Enlace</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Editar Enlace -->
    <div id="editLinkFormContainer" class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hidden">
      <div class="p-6">
        <h3 class="mb-4 text-2xl font-bold text-white">Formulario de Editar Enlace</h3>
        <form id="editLinkForm" class="space-y-6">
          <div>
            <label for="id" class="block text-sm font-bold text-gray-100">ID del Enlace</label>
            <input type="text" id="idEditLink" name="id" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <label for="url" class="block text-sm font-bold text-gray-100">Nueva URL</label>
            <input type="text" id="urlEditLink" name="url" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white">
          </div>
          <div>
            <label for="userEditLink" class="block text-sm font-bold text-gray-100">Usuario</label>
            <input type="text" id="userEditLink" name="user" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <label for="passwordEditLink" class="block text-sm font-bold text-gray-100">Contrase침a</label>
            <input type="password" id="passwordEditLink" name="password" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <button type="button" id="submitEditLinkForm" class="inline-block px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">Editar Enlace</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Eliminar Enlace -->
    <div id="deleteLinkFormContainer" class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hidden">
      <div class="p-6">
        <h3 class="mb-4 text-2xl font-bold text-white">Formulario de Eliminar Enlace</h3>
        <form id="deleteLinkForm" class="space-y-6">
          <div>
            <label for="id" class="block text-sm font-bold text-gray-100">ID del Enlace</label>
            <input type="text" id="idDeleteLink" name="id" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <label for="userDeleteLink" class="block text-sm font-bold text-gray-100">Usuario</label>
            <input type="text" id="userDeleteLink" name="user" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <label for="passwordDeleteLink" class="block text-sm font-bold text-gray-100">Contrase침a</label>
            <input type="password" id="passwordDeleteLink" name="password" class="mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <button type="button" id="submitDeleteLinkForm" class="inline-block px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Eliminar Enlace</button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <%- include(`../scripts.ejs`) %>
</main>