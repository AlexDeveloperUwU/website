<main class="container mx-auto mt-10 flex-grow px-8 sm:px-16 md:px-24 lg:px-32 hidden">
  <section class="mx-auto mt-10 max-w-6xl text-left">
    <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg">
      <div class="p-6">
        <h3 class="mb-4 text-2xl font-bold text-white flex items-center">
          <i class="fa-solid fa-list-check mr-3 text-gray-300"></i>
          Selecciona el formulario
        </h3>
        <div class="flex flex-wrap gap-4">
          <button id="showAddEventForm" class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 w-full sm:w-auto">
            <i class="fa-solid fa-plus mr-2"></i>A침adir Evento
          </button>
          <button id="showDeleteEventForm" class="inline-block px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 w-full sm:w-auto">
            <i class="fa-solid fa-trash mr-2"></i>Eliminar Evento
          </button>
          <button id="showAllEvents" class="inline-block px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 w-full sm:w-auto">
            <i class="fa-solid fa-calendar-check mr-2"></i>Mostrar Eventos
          </button>
        </div>
      </div>
    </div>
  </section>

  <section id="formSection" class="mx-auto mt-10 max-w-6xl text-left">
    <div id="addEventFormContainer" class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hidden">
      <div class="p-6">
        <h3 class="mb-4 text-2xl font-bold text-white flex items-center">
          <i class="fa-solid fa-calendar-plus mr-3 text-gray-300"></i>
          Formulario de A침adir Evento
        </h3>
        <form id="addEventForm" class="space-y-4">
          <div>
            <label for="date" class="block text-sm font-bold text-gray-100">Fecha</label>
            <input type="date" id="dateAddEvent" name="date" class="font-agrandir mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <label for="time" class="block text-sm font-bold text-gray-100">Hora</label>
            <input type="text" id="timeAddEvent" name="time" class="font-agrandir mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" placeholder="HH:MM" required>
          </div>
          <div>
            <label for="type" class="block text-sm font-bold text-gray-100">Tipo</label>
            <select id="typeAddEvent" name="type" class="font-agrandir mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
              <option value="" disabled selected>Selecciona un tipo</option>
              <option value="Twitch">Twitch</option>
              <option value="YouTube">YouTube</option>
              <option value="Multistream">Multistream</option>
            </select>
          </div>
          <div>
            <label for="description" class="block text-sm font-bold text-gray-100">Descripci칩n</label>
            <textarea id="descriptionAddEvent" name="description" rows="4" class="font-agrandir mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required></textarea>
          </div>
          <div>
            <button type="button" id="submitAddEventForm" class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 w-full">
              <i class="fa-solid fa-check mr-2"></i>A침adir Evento
            </button>
          </div>
        </form>
      </div>
    </div>

    <div id="deleteEventFormContainer" class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hidden">
      <div class="p-6">
        <h3 class="mb-4 text-2xl font-bold text-white flex items-center">
          <i class="fa-solid fa-calendar-xmark mr-3 text-gray-300"></i>
          Formulario de Eliminar Evento
        </h3>
        <form id="deleteEventForm" class="space-y-4">
          <div>
            <label for="id" class="block text-sm font-bold text-gray-100">ID Evento</label>
            <input type="text" id="id" name="id" class="font-agrandir mt-1 block w-full bg-gray-700 border-gray-600 rounded-md shadow-sm focus:border-blue-400 focus:ring focus:ring-blue-400 focus:ring-opacity-50 text-white" required>
          </div>
          <div>
            <button type="button" id="submitDeleteEventForm" class="inline-block px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 w-full">
              <i class="fa-solid fa-trash mr-2"></i>Eliminar Evento
            </button>
          </div>
        </form>
      </div>
    </div>

    <div id="allEventsContainer" class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hidden">
      <div class="p-6">
        <h3 class="mb-4 text-2xl font-bold text-white flex items-center">
          <i class="fa-solid fa-calendar-days mr-3 text-gray-300"></i>
          Todos los Eventos
        </h3>
        <div id="eventsGrid" class="grid gap-4">
        </div>
      </div>
    </div>
  </section>

  <script src="/js/minified/admin/calmanager.js"></script>
  <%- include(`../scripts.ejs`) %>
</main>